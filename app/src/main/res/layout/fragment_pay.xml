<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA"
    android:padding="@dimen/pay_main_padding">

    <ScrollView
        android:id="@+id/scrollViewContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pay_header_title"
                    android:textSize="@dimen/home_title_text_size"
                    android:textStyle="bold"
                    android:textColor="#1A1A1A" />
            </LinearLayout>

            <!-- Header với chọn tháng -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/pay_card_margin_bottom"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="@dimen/pay_header_padding">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="6dp"
                        android:text="@string/pay_select_month_label"
                        android:textColor="#2E2E2E"
                        android:textSize="@dimen/pay_note_text_size"
                        android:textStyle="bold"
                        android:drawablePadding="6dp"
                        android:gravity="center_vertical"
                        app:drawableStartCompat="@drawable/ic_calendar" />

                    <Spinner
                        android:id="@+id/spnMonthPicker"
                        android:layout_width="0dp"
                        android:layout_height="38dp"
                        android:layout_weight="1"
                        android:background="@drawable/spinner_background"
                        android:minHeight="48dp"
                        android:padding="6dp"
                        android:popupElevation="8dp"
                        tools:ignore="TouchTargetSizeCheck" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Card trạng thái thanh toán -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardPaymentStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/pay_card_margin_bottom"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/gradient_orange"
                    android:orientation="vertical"
                    android:padding="@dimen/pay_status_card_padding">

                    <TextView
                        android:id="@+id/tvPaymentStatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="6dp"
                        android:drawablePadding="10dp"
                        android:gravity="center_vertical"
                        android:text="@string/pay_status_default"
                        android:textColor="#FFFFFF"
                        android:textSize="@dimen/pay_status_text_size"
                        android:textStyle="bold"
                        app:drawableStartCompat="@drawable/ic_pending"
                        app:drawableTint="#FFFFFF"
                        tools:ignore="TextContrastCheck" />

                    <TextView
                        android:id="@+id/tvNote"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="1dp"
                        android:text="@string/pay_note_default"
                        android:textColor="#E8F5E8"
                        android:textSize="@dimen/pay_note_text_size"
                        tools:ignore="TextContrastCheck" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Card chi tiết tạm tính -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/pay_card_margin_bottom"
                android:backgroundTint="#FFFFFF"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/pay_card_padding">

                    <!-- Header section -->
                    <TextView
                        android:id="@+id/tvCalculationTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:text="@string/pay_calculation_title_default"
                        android:textColor="#2E2E2E"
                        android:textSize="@dimen/pay_title_text_size"
                        android:textStyle="bold"
                        android:gravity="center_vertical"
                        app:drawableStartCompat="@drawable/ic_calculator"
                        android:drawablePadding="8dp"
                        app:drawableTint="#FF9800" />

                    <!-- Chi tiết tiêu thụ -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:background="@drawable/detail_background"
                        android:orientation="vertical"
                        android:padding="@dimen/pay_detail_padding">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="6dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:layout_marginEnd="6dp"
                                android:contentDescription="@string/pay_electric_icon_description"
                                android:src="@drawable/ic_electric_vector"
                                app:tint="#FFC107"
                                tools:ignore="ImageContrastCheck" />

                            <TextView
                                android:id="@+id/tvElectricDetail"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/pay_electric_detail_default"
                                android:textColor="#444444"
                                android:textSize="@dimen/pay_detail_text_size" />

                            <TextView
                                android:id="@+id/tvElectricAmount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/pay_electric_amount_default"
                                android:textColor="#2E7D32"
                                android:textSize="@dimen/pay_detail_text_size"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:layout_marginEnd="6dp"
                                android:contentDescription="@string/pay_water_icon_description"
                                android:src="@drawable/ic_water_vector"
                                app:tint="#2196F3"
                                tools:ignore="ImageContrastCheck" />

                            <TextView
                                android:id="@+id/tvWaterDetail"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/pay_water_detail_default"
                                android:textColor="#444444"
                                android:textSize="@dimen/pay_detail_text_size" />

                            <TextView
                                android:id="@+id/tvWaterAmount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/pay_water_amount_default"
                                android:textColor="#2E7D32"
                                android:textSize="@dimen/pay_detail_text_size"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Tổng cộng -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="10dp"
                        android:background="#E0E0E0" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvTotalLabel"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/pay_total_label"
                            android:textColor="#666666"
                            android:textSize="@dimen/pay_title_text_size" />

                        <TextView
                            android:id="@+id/tvTotalAmount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/pay_total_amount_default"
                            android:textColor="#D32F2F"
                            android:textSize="@dimen/pay_total_text_size"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Card thông báo không thể thanh toán -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardPaymentNotice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/pay_card_margin_bottom"
                android:backgroundTint="#FFF3E0"
                android:visibility="visible"
                app:cardCornerRadius="16dp"
                app:cardElevation="3dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/pay_card_padding">

                    <TextView
                        android:id="@+id/tvPaymentNoticeTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="6dp"
                        android:text="@string/pay_notice_title_default"
                        android:textColor="#E65100"
                        android:textSize="@dimen/pay_title_text_size"
                        android:textStyle="bold"
                        android:gravity="center_vertical"
                        app:drawableStartCompat="@drawable/ic_info"
                        android:drawablePadding="8dp"
                        app:drawableTint="#FF9800" />

                    <TextView
                        android:id="@+id/tvPaymentNoticeContent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="1dp"
                        android:text="@string/pay_notice_content_default"
                        android:textColor="#795548"
                        android:textSize="@dimen/pay_note_text_size" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Nút thanh toán -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="25dp"
                app:cardElevation="8dp"
                app:cardUseCompatPadding="true">

                <Button
                    android:id="@+id/btnPayNow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/gray_disabled"
                    android:clickable="true"
                    android:elevation="0dp"
                    android:focusable="true"
                    android:paddingVertical="@dimen/pay_button_padding_vertical"
                    android:stateListAnimator="@null"
                    android:text="@string/pay_button_text_default"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/pay_button_text_size"
                    android:textStyle="bold"
                    app:backgroundTint="@null"
                    tools:ignore="TextContrastCheck" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/progressOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true">

        <ProgressBar
            android:id="@+id/progressBarFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:indeterminate="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/progressBarFragment"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:text="@string/pay_loading_text"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />
    </RelativeLayout>
</RelativeLayout>


