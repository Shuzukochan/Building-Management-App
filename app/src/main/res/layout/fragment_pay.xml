<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header với chọn tháng -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardUseCompatPadding="true"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="#FFFFFF"
                android:padding="12dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_calendar"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chọn tháng:"
                    android:textSize="14sp"
                    android:textColor="#2E2E2E"
                    android:textStyle="bold"
                    android:layout_marginEnd="8dp" />

                <Spinner
                    android:id="@+id/spnMonthPicker"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:background="@drawable/spinner_background"
                    android:padding="8dp"
                    android:popupElevation="8dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Card trạng thái thanh toán -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardPaymentStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:cardUseCompatPadding="true"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/gradient_green"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:id="@+id/ivPaymentStatusIcon"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_check_circle"
                        android:layout_marginEnd="12dp"
                        app:tint="#FFFFFF"/>

                    <TextView
                        android:id="@+id/tvPaymentStatus"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Đã thanh toán tháng 05/2025"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tvNote"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cảm ơn bạn đã thanh toán đúng hạn!"
                    android:textColor="#E8F5E8"
                    android:textSize="14sp"
                    android:lineSpacingExtra="2dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Card chi tiết tạm tính -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardUseCompatPadding="true"
            android:backgroundTint="#FFFFFF"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Header section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_calculator"
                        android:layout_marginEnd="12dp"
                        app:tint="#FF9800" />

                    <TextView
                        android:id="@+id/tvCalculationTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Tạm tính đến ngày: 08/06/2025"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#2E2E2E"/>
                </LinearLayout>

                <!-- Chi tiết tiêu thụ -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/detail_background"
                    android:padding="16dp"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_electric"
                            android:layout_marginEnd="8dp"
                            app:tint="#FFC107" />

                        <TextView
                            android:id="@+id/tvElectricDetail"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Tiêu thụ điện: 1 × 3.300đ"
                            android:textSize="15sp"
                            android:textColor="#444444"/>

                        <TextView
                            android:id="@+id/tvElectricAmount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3.300đ"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="#2E7D32"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_water"
                            android:layout_marginEnd="8dp"
                            app:tint="#2196F3" />

                        <TextView
                            android:id="@+id/tvWaterDetail"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Tiêu thụ nước: 0 × 15.000đ"
                            android:textSize="15sp"
                            android:textColor="#444444"/>

                        <TextView
                            android:id="@+id/tvWaterAmount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0đ"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="#2E7D32"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- Tổng cộng -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0"
                    android:layout_marginBottom="12dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tvTotalLabel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Tổng cộng:"
                        android:textSize="16sp"
                        android:textColor="#666666"/>

                    <TextView
                        android:id="@+id/tvTotalAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3.300đ"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="#D32F2F"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Card thông báo không thể thanh toán -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardPaymentNotice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="3dp"
            app:cardUseCompatPadding="true"
            android:backgroundTint="#FFF3E0"
            android:layout_marginBottom="24dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_info"
                        android:layout_marginEnd="12dp"
                        app:tint="#FF9800" />

                    <TextView
                        android:id="@+id/tvPaymentNoticeTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Thông báo thanh toán"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#E65100"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tvPaymentNoticeContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Chưa đến ngày thanh toán. Vui lòng thanh toán vào ngày 01 tháng sau."
                    android:textSize="14sp"
                    android:textColor="#8D6E63"
                    android:lineSpacingExtra="2dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Nút thanh toán -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="25dp"
            app:cardElevation="8dp"
            app:cardUseCompatPadding="true"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/btnPayNow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="💳 Xác nhận thanh toán"
                android:textAllCaps="false"
                android:background="@drawable/button_gradient_background"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingVertical="16dp"
                android:elevation="0dp"
                android:stateListAnimator="@null"/>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
