<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA"
    android:padding="@dimen/pay_main_padding">

    <ScrollView
        android:id="@+id/scrollViewContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header với chọn tháng -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/pay_card_margin_bottom"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="@dimen/pay_header_padding">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginEnd="6dp"
                        android:src="@drawable/ic_calendar" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="6dp"
                        android:text="Chọn tháng:"
                        android:textColor="#2E2E2E"
                        android:textSize="@dimen/pay_note_text_size"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/spnMonthPicker"
                        android:layout_width="0dp"
                        android:layout_height="32dp"
                        android:layout_weight="1"
                        android:background="@drawable/spinner_background"
                        android:padding="6dp"
                        android:popupElevation="8dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Card trạng thái thanh toán -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardPaymentStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/pay_card_margin_bottom"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/gradient_orange"
                    android:orientation="vertical"
                    android:padding="@dimen/pay_status_card_padding">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="6dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/ivPaymentStatusIcon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginEnd="10dp"
                            android:src="@drawable/ic_pending"
                            app:tint="#FFFFFF" />

                        <TextView
                            android:id="@+id/tvPaymentStatus"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Tạm tính tháng"
                            android:textColor="#FFFFFF"
                            android:textSize="@dimen/pay_status_text_size"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvNote"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="1dp"
                        android:text="Đây là số liệu tạm tính. Thanh toán vào ngày 01 tháng sau."
                        android:textColor="#E8F5E8"
                        android:textSize="@dimen/pay_note_text_size" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Card chi tiết tạm tính -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/pay_card_margin_bottom"
                android:backgroundTint="#FFFFFF"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/pay_card_padding">

                    <!-- Header section -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginEnd="8dp"
                            android:src="@drawable/ic_calculator"
                            app:tint="#FF9800" />

                        <TextView
                            android:id="@+id/tvCalculationTitle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Tạm tính đến ngày: 08/06/2025"
                            android:textColor="#2E2E2E"
                            android:textSize="@dimen/pay_title_text_size"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- Chi tiết tiêu thụ -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:background="@drawable/detail_background"
                        android:orientation="vertical"
                        android:padding="@dimen/pay_detail_padding">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="6dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:layout_marginEnd="6dp"
                                android:src="@drawable/ic_electric"
                                app:tint="#FFC107" />

                            <TextView
                                android:id="@+id/tvElectricDetail"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Tiêu thụ điện: 1 × 3.300đ"
                                android:textColor="#444444"
                                android:textSize="@dimen/pay_detail_text_size" />

                            <TextView
                                android:id="@+id/tvElectricAmount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="3.300đ"
                                android:textColor="#2E7D32"
                                android:textSize="@dimen/pay_detail_text_size"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:layout_marginEnd="6dp"
                                android:src="@drawable/ic_water"
                                app:tint="#2196F3" />

                            <TextView
                                android:id="@+id/tvWaterDetail"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Tiêu thụ nước: 0 × 15.000đ"
                                android:textColor="#444444"
                                android:textSize="@dimen/pay_detail_text_size" />

                            <TextView
                                android:id="@+id/tvWaterAmount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0đ"
                                android:textColor="#2E7D32"
                                android:textSize="@dimen/pay_detail_text_size"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Tổng cộng -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="10dp"
                        android:background="#E0E0E0" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvTotalLabel"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Tổng cộng:"
                            android:textColor="#666666"
                            android:textSize="@dimen/pay_title_text_size" />

                        <TextView
                            android:id="@+id/tvTotalAmount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3.300đ"
                            android:textColor="#D32F2F"
                            android:textSize="@dimen/pay_total_text_size"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Card thông báo không thể thanh toán -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardPaymentNotice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/pay_card_margin_bottom"
                android:backgroundTint="#FFF3E0"
                android:visibility="visible"
                app:cardCornerRadius="16dp"
                app:cardElevation="3dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/pay_card_padding">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="6dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginEnd="8dp"
                            android:src="@drawable/ic_info"
                            app:tint="#FF9800" />

                        <TextView
                            android:id="@+id/tvPaymentNoticeTitle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Thông báo"
                            android:textColor="#E65100"
                            android:textSize="@dimen/pay_title_text_size"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvPaymentNoticeContent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="1dp"
                        android:text="Đây là số liệu tạm tính. Thanh toán sẽ được mở vào ngày 01 tháng sau."
                        android:textColor="#8D6E63"
                        android:textSize="@dimen/pay_note_text_size" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Nút thanh toán -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="25dp"
                app:cardElevation="8dp"
                app:cardUseCompatPadding="true">

                <Button
                    android:id="@+id/btnPayNow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/gray_disabled"
                    android:elevation="0dp"
                    android:paddingVertical="@dimen/pay_button_padding_vertical"
                    android:stateListAnimator="@null"
                    android:text="⏳ Chưa đến hạn thanh toán"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/pay_button_text_size"
                    android:textStyle="bold"
                    app:backgroundTint="@null" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/progressOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:visibility="gone"
        android:clickable="true">

        <ProgressBar
            android:id="@+id/progressBarFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:indeterminate="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/progressBarFragment"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:text="Đang tải dữ liệu..."
            android:textColor="#FFFFFF"
            android:textSize="14sp" />
    </RelativeLayout>
</RelativeLayout>


