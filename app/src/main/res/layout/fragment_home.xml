<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA"
    android:fillViewport="true"
    android:clipToPadding="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/home_main_padding"
        android:clipToPadding="false"
        android:clipChildren="false">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/home_header_margin_bottom">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tổng quan tiêu thụ"
                android:textSize="@dimen/home_title_text_size"
                android:textStyle="bold"
                android:textColor="#1A1A1A" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="6dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tháng 06/2025"
                    android:textSize="@dimen/home_subtitle_text_size"
                    android:textColor="#6B7280" />

                <View
                    android:layout_width="4dp"
                    android:layout_height="4dp"
                    android:background="@drawable/circle_dot"
                    android:backgroundTint="#D1D5DB"
                    android:layout_marginHorizontal="12dp" />

                <TextView
                    android:id="@+id/tvRoomNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phòng 1"
                    android:textSize="@dimen/home_subtitle_text_size"
                    android:textColor="#6B7280"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

        <!-- Usage Cards Grid -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/home_cards_margin_bottom"
            android:baselineAligned="false">

            <!-- Electric Usage Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="10dp"
                android:minHeight="@dimen/home_card_min_height"
                app:cardCornerRadius="24dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="#FEF3C7"
                app:strokeWidth="0dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/home_card_padding"
                    android:gravity="center"
                    android:minHeight="@dimen/home_card_min_height">

                    <ImageView
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:src="@drawable/ic_electric_vector"
                        app:tint="#F59E0B"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:id="@+id/tvElectricUsed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5 kWh"
                        android:textSize="@dimen/home_usage_value_text_size"
                        android:textStyle="bold"
                        android:textColor="#D97706"
                        android:gravity="center"
                        android:layout_marginBottom="6dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Đã sử dụng"
                        android:textSize="13sp"
                        android:textColor="#78716C"
                        android:gravity="center" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Water Usage Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:minHeight="@dimen/home_card_min_height"
                app:cardCornerRadius="24dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="#CFFAFE"
                app:strokeWidth="0dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/home_card_padding"
                    android:gravity="center"
                    android:minHeight="@dimen/home_card_min_height">

                    <ImageView
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:src="@drawable/ic_water_vector"
                        app:tint="#0891B2"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:id="@+id/tvWaterUsed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 m³"
                        android:textSize="@dimen/home_usage_value_text_size"
                        android:textStyle="bold"
                        android:textColor="#0E7490"
                        android:gravity="center"
                        android:layout_marginBottom="6dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Đã sử dụng"
                        android:textSize="13sp"
                        android:textColor="#78716C"
                        android:gravity="center" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <!-- Current Meter Reading Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chỉ số đồng hồ hiện tại"
            android:textSize="@dimen/home_section_title_text_size"
            android:textStyle="bold"
            android:textColor="#1A1A1A"
            android:layout_marginBottom="@dimen/home_title_margin_bottom" />

        <!-- Electric Reading Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/home_card_margin_bottom"
            app:cardCornerRadius="18dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="#FFFFFF"
            app:strokeWidth="0dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/home_reading_card_padding"
                android:gravity="center_vertical">

                <View
                    android:layout_width="5dp"
                    android:layout_height="52dp"
                    android:background="@drawable/rounded_accent_bar"
                    android:backgroundTint="#F59E0B"
                    android:layout_marginEnd="18dp" />

                <ImageView
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:src="@drawable/ic_electric_vector"
                    app:tint="#F59E0B"
                    android:layout_marginEnd="18dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Số điện"
                        android:textSize="14sp"
                        android:textColor="#6B7280" />

                    <TextView
                        android:id="@+id/tvElectric"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100 kWh"
                        android:textSize="@dimen/home_reading_value_text_size"
                        android:textStyle="bold"
                        android:textColor="#1A1A1A"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Water Reading Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="18dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="#FFFFFF"
            app:strokeWidth="0dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/home_reading_card_padding"
                android:gravity="center_vertical">

                <View
                    android:layout_width="5dp"
                    android:layout_height="52dp"
                    android:background="@drawable/rounded_accent_bar"
                    android:backgroundTint="#0891B2"
                    android:layout_marginEnd="18dp" />

                <ImageView
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:src="@drawable/ic_water_vector"
                    app:tint="#0891B2"
                    android:layout_marginEnd="18dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Số nước"
                        android:textSize="14sp"
                        android:textColor="#6B7280" />

                    <TextView
                        android:id="@+id/tvWater"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="200 m³"
                        android:textSize="@dimen/home_reading_value_text_size"
                        android:textStyle="bold"
                        android:textColor="#1A1A1A"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Tips Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="18dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#ECFDF5"
            app:strokeWidth="1dp"
            app:strokeColor="#A7F3D0"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/home_tips_card_padding"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_tips"
                    app:tint="#059669"
                    android:layout_marginEnd="14dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mẹo tiết kiệm hôm nay"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="#047857" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tắt thiết bị khi không dùng để tiết kiệm 10-15% chi phí!"
                        android:textSize="13sp"
                        android:textColor="#047857"
                        android:layout_marginTop="3dp"
                        android:lineSpacingExtra="3dp" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
