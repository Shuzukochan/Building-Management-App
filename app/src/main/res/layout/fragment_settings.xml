<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F7FB"
    android:clipToPadding="false"
    android:padding="@dimen/settings_main_padding"
    tools:context=".fragment.SettingsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/settings_header_title"
                android:textSize="@dimen/home_title_text_size"
                android:textStyle="bold"
                android:textColor="#1A1A1A" />
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/settings_card_margin_bottom"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/settings_card_padding">

                <!-- User Name Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="@dimen/settings_user_info_margin_bottom">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginEnd="12dp"
                        android:src="@drawable/baseline_person_24"
                        android:background="@drawable/circle_background"
                        android:backgroundTint="#FFF3E0"
                        android:padding="8dp"
                        android:contentDescription="@string/settings_user_icon_description"
                        app:tint="#F57C00"
                        tools:ignore="ImageContrastCheck" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/settings_user_name_label"
                            android:textColor="#666666"
                            android:textSize="@dimen/settings_label_text_size"
                            android:layout_marginBottom="2dp" />

                        <TextView
                            android:id="@+id/tvUserName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/settings_loading_text"
                            android:textColor="@color/black"
                            android:textSize="@dimen/settings_user_name_text_size"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Room Info Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="@dimen/settings_user_info_margin_bottom">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginEnd="12dp"
                        android:src="@drawable/baseline_home_24"
                        android:background="@drawable/circle_background"
                        android:backgroundTint="#E3F2FD"
                        android:padding="8dp"
                        android:contentDescription="@string/settings_room_icon_description"
                        app:tint="#1976D2"
                        tools:ignore="ImageContrastCheck" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/settings_room_label"
                            android:textColor="#666666"
                            android:textSize="@dimen/settings_label_text_size"
                            android:layout_marginBottom="2dp" />

                        <TextView
                            android:id="@+id/tvRoomNumber"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/settings_loading_text"
                            android:textColor="@color/black"
                            android:textSize="@dimen/settings_room_text_size"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Phone Info Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginEnd="12dp"
                        android:src="@drawable/baseline_phone_24"
                        android:background="@drawable/circle_background"
                        android:backgroundTint="#E8F5E8"
                        android:padding="8dp"
                        android:contentDescription="@string/settings_phone_icon_description"
                        app:tint="#388E3C"
                        tools:ignore="ImageContrastCheck" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/settings_phone_label"
                            android:textColor="#666666"
                            android:textSize="@dimen/settings_label_text_size"
                            android:layout_marginBottom="2dp" />

                        <TextView
                            android:id="@+id/tv_phoneNumber"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/settings_loading_text"
                            android:textColor="@color/black"
                            android:textSize="@dimen/settings_phone_text_size" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Thanh toán Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/settings_section_margin_bottom"
            android:layout_marginStart="4dp"
            android:text="@string/settings_payment_section"
            android:textColor="#333333"
            android:textSize="@dimen/settings_section_text_size"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/settings_card_margin_bottom"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/btn_payment_history"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/settings_item_height"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/settings_item_padding"
                    android:paddingEnd="@dimen/settings_item_padding"
                    tools:ignore="UselessParent">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="12dp"
                        android:src="@drawable/baseline_history_24"
                        android:contentDescription="@string/settings_payment_history_icon_description"
                        app:tint="#666666" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/settings_payment_history_label"
                        android:textColor="@color/black"
                        android:textSize="@dimen/settings_item_text_size"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:contentDescription="@string/settings_arrow_icon_description"
                        android:src="@drawable/baseline_arrow_forward_ios_24"
                        app:tint="#CCCCCC"
                        tools:ignore="ImageContrastCheck" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Ứng dụng Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/settings_section_margin_bottom"
            android:layout_marginStart="4dp"
            android:text="@string/settings_app_section"
            android:textColor="#333333"
            android:textSize="@dimen/settings_section_text_size"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/settings_card_margin_bottom"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/layoutNotifications"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/settings_item_height"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/settings_item_padding"
                    android:paddingEnd="@dimen/settings_item_padding"
                    tools:ignore="UselessParent">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="12dp"
                        android:src="@drawable/baseline_notifications_24"
                        android:contentDescription="@string/settings_notification_icon_description"
                        app:tint="#666666" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/settings_notification_label"
                        android:textColor="@color/black"
                        android:textSize="@dimen/settings_item_text_size"
                        android:textStyle="bold" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchNotifications"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="56dp"
                        android:minHeight="32dp"
                        android:checked="true"
                        android:clickable="false"
                        android:focusable="false"
                        app:thumbTint="@android:color/white"
                        app:trackTint="@color/switch_track_color"
                        app:trackTintMode="src_in" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Hỗ trợ Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/settings_section_margin_bottom"
            android:layout_marginStart="4dp"
            android:text="@string/settings_support_section"
            android:textColor="#333333"
            android:textSize="@dimen/settings_section_text_size"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/settings_card_margin_bottom"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/btn_feedback"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/settings_item_height"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/settings_item_padding"
                    android:paddingEnd="@dimen/settings_item_padding">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="12dp"
                        android:src="@drawable/baseline_feedback_24"
                        android:contentDescription="@string/settings_feedback_icon_description"
                        app:tint="#666666" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/settings_feedback_label"
                        android:textColor="@color/black"
                        android:textSize="@dimen/settings_item_text_size"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:contentDescription="@string/settings_arrow_icon_description"
                        android:src="@drawable/baseline_arrow_forward_ios_24"
                        app:tint="#CCCCCC"
                        tools:ignore="ImageContrastCheck" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="52dp"
                    android:background="#F0F0F0" />

                <LinearLayout
                    android:id="@+id/btn_support"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/settings_item_height"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/settings_item_padding"
                    android:paddingEnd="@dimen/settings_item_padding">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="12dp"
                        android:src="@drawable/baseline_contact_support_24"
                        android:contentDescription="@string/settings_contact_icon_description"
                        app:tint="#666666" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/settings_contact_label"
                        android:textColor="@color/black"
                        android:textSize="@dimen/settings_item_text_size"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:contentDescription="@string/settings_arrow_icon_description"
                        android:src="@drawable/baseline_arrow_forward_ios_24"
                        app:tint="#CCCCCC"
                        tools:ignore="ImageContrastCheck" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="52dp"
                    android:background="#F0F0F0" />

                <LinearLayout
                    android:id="@+id/btn_about"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/settings_item_height"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/settings_item_padding"
                    android:paddingEnd="@dimen/settings_item_padding">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="12dp"
                        android:src="@drawable/ic_info"
                        android:contentDescription="@string/settings_about_icon_description"
                        app:tint="#666666" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/settings_about_label"
                        android:textColor="@color/black"
                        android:textSize="@dimen/settings_item_text_size"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Logout Button -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/settings_card_margin_bottom"
            app:cardBackgroundColor="#FFEBEE"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:id="@+id/btnSignOut"
                android:layout_width="match_parent"
                android:layout_height="@dimen/settings_item_height"
                android:background="#FF4444"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingStart="@dimen/settings_item_padding"
                android:paddingEnd="@dimen/settings_item_padding">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/settings_logout_label"
                    app:backgroundTint="#FF4444"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/settings_logout_text_size"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/baseline_logout_24"
                    android:contentDescription="@string/settings_logout_icon_description"
                    app:tint="#FFFFFF" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>