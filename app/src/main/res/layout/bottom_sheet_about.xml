<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bottom_sheet_background"
    android:padding="20dp">

    <!-- Handle bar -->
    <View
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:background="@drawable/bottom_sheet_handle"
        android:alpha="0.3" />

    <!-- Logo trường và lab -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="20dp">

        <!-- Logo trường -->
        <ImageView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/logo_hcmute"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:contentDescription="@string/about_logo_hcmute_description" />

        <!-- Logo phòng lab -->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:src="@drawable/logo_iot_vision"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:contentDescription="@string/about_logo_iot_description" />
    </LinearLayout>


    <!-- Thông tin ứng dụng -->
    <TextView
        android:id="@+id/tvAppName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/about_app_name"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/tvVersion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/about_version"
        android:textSize="14sp"
        android:textColor="#666666"
        android:gravity="center"
        android:layout_marginBottom="20dp" />

    <!-- Giới thiệu đồ án -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/about_app_section"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginBottom="8dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/about_app_description"
        android:textSize="14sp"
        android:textColor="#666666"
        android:lineSpacingExtra="4dp"
        android:layout_marginBottom="20dp" />

    <!-- Thành viên nhóm -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/about_team_section"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginBottom="12dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/info_card_background"
        android:padding="16dp"
        android:layout_marginBottom="20dp">

        <!-- Thành viên 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/about_student_1_label"
                android:textColor="#546E7A"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tvStudent1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/about_student_1_info"
                android:textSize="13sp"
                android:textColor="#666666"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Thành viên 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/about_student_2_label"
                android:textColor="#546E7A"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tvStudent2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/about_student_2_info"
                android:textSize="13sp"
                android:textColor="#666666"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Thành viên 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/about_student_3_label"
                android:textColor="#546E7A"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tvStudent3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/about_student_3_info"
                android:textSize="13sp"
                android:textColor="#666666"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E9ECEF"
            android:layout_marginBottom="12dp" />

        <!-- Giảng viên hướng dẫn -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/about_supervisor_label"
                android:textColor="#546E7A"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tvSupervisor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/about_supervisor_info"
                android:textSize="13sp"
                android:textColor="#666666"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <!-- Thông tin trường -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/tvUniversity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about_university"
            android:textSize="14sp"
            android:textColor="#666666"
            android:textStyle="bold"
            android:gravity="center" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:text="@string/about_copyright"
        android:textColor="#757575"
        android:textSize="12sp" />
</LinearLayout>
